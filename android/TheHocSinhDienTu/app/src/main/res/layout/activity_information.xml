<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.InformationActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/primary"
            android:gravity="center"
            android:text="Thông tin cá nhân"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_baseline_arrow_back_ios_24" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--thẻ học sinh start-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:background="@drawable/border_id_card_top"
                    android:backgroundTint="#F3F3F3"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="8"
                        android:src="@drawable/logo_truong" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:orientation="vertical"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/baloo2_semibold"
                            android:gravity="center"
                            android:text="BỘ GIÁO DỤC VÀ ĐÀO TẠO"
                            android:textColor="@color/black"
                            android:textSize="15sp"></TextView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/baloo2_semibold"
                            android:gravity="center_horizontal"
                            android:text="TRƯỜNG THPT NGUYỄN THIỆN THUẬT"
                            android:textColor="@color/black"
                            android:textSize="16sp"></TextView>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="@drawable/border_id_card_bottom"
                    android:backgroundTint="#FFCA28"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="7"

                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_marginBottom="5dp"
                                android:backgroundTint="#00FFFFFF"
                                app:cardCornerRadius="10dp">

                                <ImageView
                                    android:id="@+id/img_avatar"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/avatar" />
                            </androidx.cardview.widget.CardView>


                            <androidx.cardview.widget.CardView
                                android:id="@+id/btn_change_image"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentBottom="true"
                                android:backgroundTint="#CCFF7043"
                                app:cardCornerRadius="20dp">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_margin="2dp"
                                    android:src="@drawable/ic_baseline_edit_24" />
                            </androidx.cardview.widget.CardView>
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/tv_id_ttcn"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="4"
                            android:fontFamily="@font/baloo2_semibold"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:orientation="vertical"
                        android:weightSum="5">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="4">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/baloo2_semibold"
                                android:gravity="center"
                                android:text="THẺ HỌC SINH"
                                android:textColor="#D50000"
                                android:textSize="17sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="7"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/baloo2_semibold"
                                    android:padding="3dp"
                                    android:text="Họ tên:"
                                    android:textColor="@color/black"
                                    android:textSize="14sp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/baloo2_semibold"
                                    android:padding="3dp"
                                    android:text="Ngày sinh:"
                                    android:textColor="@color/black"
                                    android:textSize="14sp" />


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/baloo2_semibold"
                                    android:padding="3dp"
                                    android:text="Lớp:"
                                    android:textColor="@color/black"
                                    android:textSize="14sp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/baloo2_semibold"
                                    android:padding="3dp"
                                    android:text="Khóa học:"
                                    android:textColor="@color/black"
                                    android:textSize="14sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/baloo2_semibold"
                                    android:padding="3dp"
                                    android:text="Đỗ Thành Tôn"
                                    android:textColor="@color/black"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tv_date_of_birth"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/baloo2_semibold"
                                    android:padding="3dp"
                                    android:text="18/08/2001"
                                    android:textColor="@color/black"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tv_class"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/baloo2_semibold"
                                    android:padding="3dp"
                                    android:text="TK 17.5"
                                    android:textColor="@color/black"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tv_schoolastic"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/baloo2_semibold"
                                    android:padding="3dp"
                                    android:text="2019-2023"
                                    android:textColor="@color/black"
                                    android:textSize="14sp" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <!--        thẻ học sinh end-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloo2_semibold"
                    android:text="Họ tên"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <EditText
                    android:paddingLeft="10dp"
                    android:id="@+id/edt_name"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/border_editext"
                    android:enabled="false" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloo2_semibold"
                    android:text="Ngày sinh"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <EditText
                    android:paddingLeft="10dp"
                    android:id="@+id/edt_date_of_birth"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/border_editext"
                    android:enabled="false" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloo2_semibold"
                    android:text="Giới tính"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <EditText
                    android:paddingLeft="10dp"
                    android:id="@+id/edt_gioi_tinh"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/border_editext"
                    android:enabled="false" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloo2_semibold"
                    android:text="Số điện thoại"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <EditText
                    android:paddingLeft="10dp"
                    android:id="@+id/edt_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/border_editext"
                    android:enabled="false" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloo2_semibold"
                    android:text="Thôn, xóm"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <EditText
                    android:paddingLeft="10dp"
                    android:id="@+id/edt_thon_xom"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/border_editext"
                    android:enabled="false" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloo2_semibold"
                    android:text="Xã"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <EditText
                    android:paddingLeft="10dp"
                    android:id="@+id/edt_xa"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/border_editext"
                    android:enabled="false" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloo2_semibold"
                    android:text="Huyện"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <EditText
                    android:paddingLeft="10dp"
                    android:id="@+id/edt_huyen"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/border_editext"
                    android:enabled="false" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloo2_semibold"
                    android:text="Tỉnh"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <EditText
                    android:paddingLeft="10dp"
                    android:id="@+id/edt_tinh"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/border_editext"
                    android:enabled="false" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloo2_semibold"
                    android:text="Nơi sinh"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <EditText
                    android:paddingLeft="10dp"
                    android:id="@+id/edt_noi_sinh"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/border_editext"
                    android:enabled="false" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloo2_semibold"
                    android:text="Nơi thường trú"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <EditText
                    android:paddingLeft="10dp"
                    android:id="@+id/edt_noi_thuong_tru"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/border_editext"
                    android:enabled="false" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloo2_semibold"
                    android:text="Năm nhập học"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <EditText
                    android:paddingLeft="10dp"
                    android:id="@+id/edt_nam_nhap_hoc"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/border_editext"
                    android:enabled="false" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloo2_semibold"
                    android:text="Năm ra trường"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <EditText
                    android:paddingLeft="10dp"
                    android:id="@+id/edt_nam_ra_truong"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/border_editext"
                    android:enabled="false" />

            </LinearLayout>

        </LinearLayout>


    </ScrollView>

</LinearLayout>